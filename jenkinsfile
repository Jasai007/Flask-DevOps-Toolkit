pipeline {
    agent {
        docker {
            image 'python:3.8'
            args '--user=root'  // Running as root to avoid permission issues
        }
    }

    environment {
        APP_NAME = "pipelineContainer"
        IMAGE_NAME = "docimg"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Jasai007/Flask-DevOps-Toolkit.git'
            }
        }

        stage('Install Dependencies and Run Tests') {
            steps {
                sh '''
                    # Upgrade pip
                    python -m pip install --upgrade pip
                    
                    # Install dependencies without cache to avoid permission issues
                    pip install --no-cache-dir -r requirements.txt
                    
                    # Run unit tests
                    python -m unittest discover -s test -p "*.py"
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                    docker build -t $IMAGE_NAME .
                '''
            }
        }

        stage('Deploy Application') {
            steps {
                sh '''
                    # Stop and remove any existing container
                    docker stop $APP_NAME || true
                    docker rm $APP_NAME || true
                    
                    # Run the new container
                    docker run -d -p 80:80 --name $APP_NAME $IMAGE_NAME
                    echo "Application Deployed Successfully!"
                '''
            }
        }
    }
}
